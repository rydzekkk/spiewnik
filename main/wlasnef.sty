%compatibility between one- and twocolumn design
\newif\ifOneCol
\newcommand{\OneColVin}{\ifOneCol \vin \else \fi}

\NewEnviron{smallTwo}{
    \ifOneCol
        \BODY
    \else
        \small{
        \BODY
        }
    \fi
}

\NewEnviron{tinyTwo}{
        \ifOneCol
            \BODY
        \else
            \tiny{
            \BODY
            }
        \fi
}

\NewEnviron{footTwo}{
    \ifOneCol
        \BODY
    \else
        \footnotesize{
        \BODY
        }
    \fi
}
